<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate expression="declarationController.initModel()" result="flowScope.declarationModel"/>
	</on-start>

    <view-state id="view-state-1" view="declaration/view-state-1" model="declarationModel">
    	<transition on="success" to="view-state-2">
    		<evaluate expression="declarationModel.processFile()"/>
    	</transition>
    </view-state>

    <view-state id="view-state-2" view="declaration/view-state-2">
    	<transition on="success" to="end-state"/>
    	<transition on="cancel" to="view-state-1"/>
    </view-state>

    <end-state id="end-state" view="declaration/end-state"/>

</flow>
