<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate expression="declarationController.initModel()" result="flowScope.declarationModel"/>
	</on-start>

    <view-state id="initData" view="declaration/initData" model="declarationModel">
    	<transition on="success" to="usersDeclarations">
    		<evaluate expression="declarationController.readData(declarationModel)"/>
    	</transition>
    </view-state>

    <view-state id="usersDeclarations" view="declaration/usersDeclarations">
    	<on-entry>
    		<evaluate expression="declarationController.initDeclarations(declarationModel)"/>
    	</on-entry>
    	<transition on="success" to="downloadDocuments">
    		<evaluate expression="declarationController.generateDocuments(declarationModel)"/>
    	</transition>
    	<transition on="cancel" to="initData"/>
    </view-state>

    <end-state id="downloadDocuments" view="declaration/downloadDocuments"/>

</flow>
