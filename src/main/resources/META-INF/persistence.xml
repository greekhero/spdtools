<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="spd" transaction-type="RESOURCE_LOCAL">
        <class>ua.org.tumakha.spd.entity.User</class>
        <class>ua.org.tumakha.spd.entity.Bank</class>
        <class>ua.org.tumakha.spd.entity.Address</class>
        <class>ua.org.tumakha.spd.entity.Contract</class>
        <class>ua.org.tumakha.spd.entity.Act</class>
        <class>ua.org.tumakha.spd.entity.Group</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
        <!-- 
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect"/>
         -->
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.bytecode.use_reflection_optimizer" value="true"/>
        </properties>
    </persistence-unit>

</persistence>